<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="viewModel"
                type="net.riadh.henri.ui.book.BookViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

        <TextView
                tools:text="Text text text"
                android:id="@+id/book_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                app:mutableText="@{viewModel.getBookTitle()}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                android:layout_marginStart="8dp" android:layout_marginTop="16dp" android:fontFamily="sans-serif-black"/>

        <TextView
                android:text="@string/read_summary"
                android:id="@+id/read_summary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/book_isbn" android:textAllCaps="false"
                android:textColor="@android:color/holo_blue_dark"/>
        <TextView
                tools:text="16354de-dsqfkljmdsqf-fdqsf"
                android:id="@+id/book_isbn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                app:mutableText="@{viewModel.getBookIsbn()}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/book_title" android:textSize="12sp"
                android:fontFamily="sans-serif-thin"/>
        <TextView
                tools:text="15.00"
                android:id="@+id/book_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                app:mutableText="@{viewModel.getBookPrice()}"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                android:layout_marginStart="8dp"
                android:textSize="18sp"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/design_default_color_error" android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/read_summary"/>
        <ImageView
                tools:background="@android:color/black"
                android:layout_width="100dp"
                android:layout_height="143dp"
                app:imageUrl="@{viewModel.getBookCover()}"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/imageView"
                tools:ignore="ContentDescription" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintBottom_toTopOf="@+id/view"/>
        <ImageView
                android:layout_width="35dp"
                android:layout_height="33dp"
                app:srcCompat="@drawable/ic_add_shopping"
                android:id="@+id/imageView2"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@+id/book_price"
                android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="1.0"
                tools:ignore="ContentDescription" app:layout_constraintBottom_toTopOf="@+id/view"/>

        <View
                android:background="@android:color/black"
                android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/view"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>